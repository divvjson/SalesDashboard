@using SalesDashboard.Components.StateProviders.DeviceStateProvider
@using SalesDashboard.Components.StateProviders.DrawerStateProvider
@using SalesDashboard.Pages.Regional

<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <BreakpointStateProviderComponent>
            <DeviceStateProviderComponent>
                <DrawerStateProviderComponent>
                    <CurrencyStateProviderComponent>
                        <RegionalFilterStateProviderComponent>
                            <RegionalFinancialFiguresStateProviderComponent>
                                <RouteView RouteData="routeData" DefaultLayout="typeof(Layouts.Main.MainLayout)" />
                            </RegionalFinancialFiguresStateProviderComponent>
                        </RegionalFilterStateProviderComponent>
                    </CurrencyStateProviderComponent>
                </DrawerStateProviderComponent>
            </DeviceStateProviderComponent>
        </BreakpointStateProviderComponent>
    </Found>
</Router>
